<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorAccent">#00aaff</item>
    </style>
    <style name="AppTheme.Blue">
        <item name="colorPrimary">#0088ff</item>
        <item name="colorPrimaryDark">#0088ff</item>
        <item name="colorAccent">#FFaa00</item>
    </style>
    <style name="AppTheme.Scheme">
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorAccent">#FF8d00</item>
    </style>
</resources>
